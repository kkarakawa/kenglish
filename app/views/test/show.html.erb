<form action="/test/result" method="post">
<% @questions.each.with_index do |q, idx| %>
<div class="page-header">
  <h3>問題<%= idx + 1 %>：</h3>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= q[:content] %></h3>
  </div>
  <div class="panel-body">
    <div class="input-group">
      <input type="text" class="form-control" id="<%= q[:id] %>" placeholder="回答">
      <span class="input-group-btn">
        <button type="button" class="btn btn-default" onclick="this.disabled=true;checkAnswer(<%= q[:id] %>);">回答</button>
      </span>
    </div>
    <h3 id="result_<%= q[:id] %>"></h3>
    <p id="answer_<%= q[:id] %>" class="text-danger"></p>
  </div>
</div>
<% end %>
</form>
