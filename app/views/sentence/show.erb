<div class="page-header">
  <h3>問題：</h3>
</div>
<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1"><%= @question[:content] %></a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse">
      <div class="panel-body text-danger"><%= @question[:answer] %></div>
    </div>
  </div>
</div>

<div>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">解説</button>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
          <h4 class="modal-title text-primary" id="myModalLabel"><%= @question[:hint_title] %></h4>
        </div>
        <div class="modal-body">
          <%= simple_format(@question[:hint]) %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="col-xs-4">
<% if @question[:id] > 1 %>
  <a href="/sentence/<%= @question[:id] - 1 %>" class="btn btn-block btn-default">前へ</a>
<% end %>
</div>
<div class="col-xs-2 col-xs-offset-1">
  <a href="/sentence" class="btn btn-block btn-default"><span class="glyphicon glyphicon-home"></span></a>
</div>
<div class="col-xs-4 col-xs-offset-1">
<% if @question[:id] < 50 %>
  <a href="/sentence/<%= @question[:id] + 1 %>" class="btn btn-block btn-info">次へ</a>
<% end %>
</div>
